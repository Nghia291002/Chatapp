@model List<Chatapp.Models.MESSAGE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<head>

    <style>
        body {
            font-family: 'Times New Roman', sans-serif;
            margin: 0;
        }

        .chat-app {
            display: flex;
            height: 90vh;
            color: burlywood;
            
        }

        .sender-name {
            font-size: 0.8em; 
            color: tomato; 
            margin-bottom: 4px; 
            font-weight: bold; 
        }

        .sidebar {
            width: 25%;
            background-color: #1e1e1e;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #333;
            border-color: #863398;
            border-right-style: double;
        }

        .header {
            padding: 15px;
            font-size: 18px;
            background-color: #333;
            text-align: center;
            margin-bottom: 20px;
            border-color: #ff0000;
            border-bottom-style: double;
            border-right-style: solid;
        }

        .search-bar {
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            border: none;
            width: calc(100% - 20px);
            background-color: #333;
            color: #fff;
        }

        .chat-list {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }

        .chat-item {
            display: flex;
            align-items: center;
            padding: 10px;
            margin-bottom: 10px;
            cursor: pointer;
            background-color: #2e2e2e;
            border-radius: 10px;
            transition: background-color 0.3s;
            border-color: #863398;
            border-right-style: double;
        }

            .chat-item:hover {
                background-color: #454545;
            }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .chat-info {
            flex: 1;
        }

        .chat-name {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .chat-preview {
            font-size: 14px;
            color: #aaa;
        }

        .chat-window {
            width: 75%;
            height:100%;
            flex-direction: column;
            background-image: url(https://cdn.dribbble.com/users/20368/screenshots/3949907/live_chat_anim_2.gif) ;
            background-size: 65vw auto;
            background-repeat: repeat;
        }
    </style>
</head>
<div class="chat-app">
    <div class="sidebar">
        <div class="header">TIN NHẮN</div>
        @*<input type="search"
               class="search-bar"
               id="search"
               name="search"
               placeholder="Tìm kiếm trên Chatapp">*@

        @foreach (var group in ViewBag.group)
        {
            <a href="@Url.Action("Chat", "Home", new { groupname = group })" style="color: burlywood; text-decoration: none ">
                <div class="chat-item">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRS4ItnHpJivB6Xyu0_DQnY43uFV1cNKc7TaA&s" alt="Avatar" class="avatar">
                    <div class="chat-info">
                        <div class="chat-name">@group</div>
                        <div class="chat-preview"></div>
                    </div>
                </div>
            </a>
        }
    </div>
   <div class="chat-window">  </div>
</div>

